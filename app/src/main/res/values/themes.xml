<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PersonalFinances" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Change the app bar text color -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- Other theme attributes -->
        <item name="colorPrimary">@color/yellow_canary</item>
        <item name="colorPrimaryVariant">@color/yellow_canary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>
</resources>